<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_margin="8dp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        tools:text="Title"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv_title_dialog_add_leitner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    
    <RadioGroup
        android:orientation="horizontal"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_dialog_add_leitner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/radio_gp_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_margin="4dp"
            android:id="@+id/rb_dic"
            android:text="@string/from_dictionary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_margin="4dp"
            android:id="@+id/rb_costume"
            android:text="@string/costume_meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>